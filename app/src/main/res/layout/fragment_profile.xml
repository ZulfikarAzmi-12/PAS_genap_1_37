<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_entry_1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="16dp" android:background="@drawable/border_background" app:layout_constraintTop_toBottomOf="@+id/tv_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ImageView
        android:id="@+id/iv_profile_pic_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        tools:src="@drawable/Aldestha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Profile Picture 1" />

        <TextView
            android:id="@+id/tv_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aldestha Nendrayanto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_profile_pic_1"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_1"
            app:layout_constraintBottom_toTopOf="@+id/tv_absen_1"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_absen_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absen 1"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_1"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_1"
            app:layout_constraintBottom_toTopOf="@+id/tv_class_1" />

        <TextView
            android:id="@+id/tv_class_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X PPLG 1"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_absen_1"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile_pic_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_entry_2"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="16dp" android:background="@drawable/border_background" app:layout_constraintTop_toBottomOf="@+id/cl_profile_entry_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <ImageView
        android:id="@+id/iv_profile_pic_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        tools:src="@drawable/Zul"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Profile Picture 2" />

        <TextView
            android:id="@+id/tv_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aldestha Nendrayanto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_profile_pic_2"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_2"
        app:layout_constraintBottom_toTopOf="@+id/tv_absen_2"
        app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_absen_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absen 1"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_2"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_2"
        app:layout_constraintBottom_toTopOf="@+id/tv_class_2" />

        <TextView
            android:id="@+id/tv_class_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X PPLG 1"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_absen_2"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_pic_2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile_pic_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>